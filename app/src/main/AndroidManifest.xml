<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.projetofinal">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/temaSemBarra"
        tools:targetApi="donut"
        tools:ignore="AllowBackup,RtlEnabled">
        <!-- iniciando com splash -->
        <activity
            android:name=".Splash_Activity"
            android:theme="@style/temaSemBarra">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Janelas de Login -->
        <activity
            android:name=".MainActivity"
            android:theme="@style/temaSemBarra" />
        <activity
            android:name=".Login_Activity"
            android:theme="@style/temaSemBarra" />
        <!-- Janelas de Cadastro -->
        <activity
            android:name=".Cad_Doador_Activity"
            android:theme="@style/temaSemBarra" />
        <activity
            android:name=".Cad_Instituicao_Activity"
            android:theme="@style/temaSemBarra" />
        <activity
            android:name=".Cadastro_Endereco_Activity"
            android:theme="@style/temaSemBarra" />
        <!-- Janelas de Splash final -->
        <activity
            android:name=".Doador_Splash_Activity"
            android:theme="@style/temaSemBarra" />
        <activity
            android:name=".Splash_Sobre_Activity"
            android:theme="@style/temaSemBarra" />
        <activity
            android:name=".Home_Activity"
            android:theme="@style/temaSemBarra" />
    </application>

</manifest>