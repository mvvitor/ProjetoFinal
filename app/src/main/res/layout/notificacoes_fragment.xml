<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notificacoesFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/plano_de_fundo_cadastro"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#E53935"
        app:cardBackgroundColor="#2196F3"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_margin="10dp"
            android:src="@drawable/ic_bolinha"
            android:contentDescription="@string/bolinhadenotifica_oexemplo"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/txtCard1"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:text="@string/voc_recebeu_doa_o"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:background="#2196F3"
        app:cardBackgroundColor="#2196F3"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp">

        <TextView
            android:id="@+id/txtCard2"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCard1"
            android:layout_marginStart="10sp"
            android:text="@string/veja_sugest_es_de_lugares"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:background="#2196F3"
        app:cardBackgroundColor="#2196F3"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp">

        <TextView
            android:id="@+id/txtCard3"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCard1"
            android:layout_marginStart="10sp"
            android:text="@string/voc_recebeu_doa_o"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:background="#2196F3"
        app:cardBackgroundColor="#2196F3"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp">

        <TextView
            android:id="@+id/txtCard4"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCard1"
            android:layout_marginStart="10sp"
            android:text="@string/seja_bem_vindo"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>
</LinearLayout>

